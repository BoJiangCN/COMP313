@model List<WeLinkUp.Models.ApplicationUser>


<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/style1.css" rel="stylesheet" />


</head>
<body>
    <br />
    <br />
    <br />
    <header class="w3-container w3-center w3-padding-32">

        <h1><b>Manage Friend</b></h1>
        <br />
        <form class="example"  method="get" asp-action="SearchUser" enctype="multipart/form-data">
            <input type="text" name="searchString" placeholder="type username here..." />
            <button type="submit"> <i class="fa fa-search"></i></button>
        </form>
    </header>
    <div class="w3-row">
        <div class="w3-container">
            <h3><b>Friend List</b></h3>
            <table>
                <tr>
                    <th> </th>
                    <th> User </th>
                    <th> Action </th>
                </tr>

                @foreach (ApplicationUser user in Model)
                {
            <tr>
                <td>
                    <img class="profile" src="@Url.Content("http://softwareprojectnew2.s3.amazonaws.com/UserProfile/" + user.Image)" alt="" />
                </td>

                <td>@user.UserName</td>
                <td>
                    @Html.ActionLink(
                       "Remove",
                       "DelteFriend",
                       "Friend",
                       new { confirm = true, friendId = user.Id },
                       new { onclick = "return confirm('Do you really want to remove " + user.UserName + "?')" })
                </td>



            </tr>
                }
            </table>
        </div>
    </div>
   
    


</body>
</html>
