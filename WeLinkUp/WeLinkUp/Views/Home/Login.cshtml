@model WeLinkUp.Models.Login

@{
    ViewData["Title"] = "Login";

}

<head>
    <style>
        .text-danger {
            color: red;
        }
    </style>

</head>
<br />
<br />
<br />
<h1 class="w3-content">Login</h1>


<div class="row">
   
    <form method="post" class="w3-content" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
           @* <div>@ViewBag.result</div>*@
            <label asp-for="Username">UserName</label>
            <input asp-for="Username" class="w3-input w3-border"/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="w3-input w3-border"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" id="login" value="Login" class="btn btn-primary" />
        </div>
        <div>
            <h6>Not a user? Signup <a asp-controller="Home" asp-action="Signup">here</a></h6>
        </div>
    </form>
</div>

