@model WeLinkUp.Models.User

@{

    ViewData["Title"] = "Signup";
}

<html>
<head>
    <style>
        .text-danger {
            color: red;
        }
    </style>

</head>
<body>
    <br />
    <br />
    
    <h1 class="w3-content">Create Account</h1>
    <hr />
    <div class=""w3-justify">
        <div class="w3-content" >
            <form class="w3-content" asp-action="Signup" method="post"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="Username" class="w3-input w3-border"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="w3-input w3-border" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label>DateofBirth</label>
                    <input asp-for="DateofBirth" class="w3-input w3-border" />
                    <span asp-validation-for="DateofBirth" class="text-danger"></span>
                </div>
                
                <div class="form-control">                    
                    <label>Profile Image</label>
                    <input  type="file" id="files" asp-for="ImageFile" class="w3-input w3-border" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label>Freetime</label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("sunday", false)
                        Sunday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("monday", false)
                        Monday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("tuesday", false)
                        Tuesday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("wednesday", false)
                        Wednesday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("thursday", false)
                        Thursday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("friday", false)
                        Friday
                    </label>
                    <br />
                    <label class="custom-checkbox">
                        @Html.CheckBox("saturday", false)
                        Saturday
                    </label>
                </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Password" class="w3-input w3-border" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="w3-input w3-border" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Signup" class="btn btn-primary" />
                    </div>
                    <b>@ViewData["Message"]</b>
</form>
        </div>
    </div>

    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

